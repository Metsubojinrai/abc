@model Blog.Models.Product

@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Cập nhật</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />

            <div class="form-group">
                <label class="control-label">Chọn loại sản phẩm</label>
                @Html.ListBox("selectedCategories", ViewBag.categories,
               new { @class = "w-100", id = "selectedCategories" })
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPicture" style="width:100%;"></label>
                <input type="file" accept=".png,.jpg,.jpeg,.gif,.tif"
                       asp-for="ProductPicture"
                       class="form-control"
                       style="border: 0px !important; padding: 0px; padding-top: 10px; padding-bottom: 30px;"
                       onchange="document.getElementById('ProductPicture').src = window.URL.createObjectURL(this.files[0])" />
                <span asp-validation-for="ProductPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

