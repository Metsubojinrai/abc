@model User

@{
    Layout = "/Areas/Admin/Views/Admin/_Layout.cshtml";
}

@section TopBar {
    @await Html.PartialAsync("/Areas/Admin/Views/Admin/_TopBar.cshtml")
}

@section SideBar {
    <partial name="/Areas/Admin/Views/Admin/_SideBar.cshtml" />
}
<h1 class="bg-info text-white">Tạo User mới</h1>
<a asp-action="ListUser" asp-controller="Role" class="btn btn-secondary">Quay lại</a>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="CreateUser" method="post">
    <div class="form-group">
        <label asp-for="UserName">Tên User:</label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Tạo</button>
</form>